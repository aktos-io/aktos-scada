include ../../templates/mixins.jade
    
+partial('b-progress-bar')
  .b-progress-bar
    .progress(style="width: 100%; height: 100%")
      .progress-bar(
        role="progressbar"
        aria-valuenow="{{ .val ? .val : 0 }}"
        aria-valuemin="0"
        aria-valuemax="100"
        style="width: {{ .val ? .val : 0 }}%"
        )
