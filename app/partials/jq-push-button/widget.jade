include ../../templates/mixins.jade

+partial('jq-push-button')
  .jq-push-button
    button.jq-push-button__button.no-shadow(
      style="{{ .connected? '' : 'border: 1px dashed red' }}"
      type="button"
      data-icon="{{ .icon }}"
      data-iconpos="{{ .iconpos }}"
      data-theme="{{scada_theme ? scada_theme : 'b' }}"
      ) 
      | {{ .label ? .label : .pin_name }}
