//- projects page

#projects(data-role='page', data-theme='b').
  {{>nav-bar {active_button: 'projects'}}}

  {{#each page.projects}}
    <div style="
      width: 30em;  
      height: 30em; 
      display: inline-block;
      margin: 5px;
      padding: 0;
      ">
      
      <a href="{{ .addr ? .addr : '#' }}">
        <div class="projects__wrapper" style="
          width: 100%; 
          height: 100%; 
          background: url({{.src}}) no-repeat center center ;
          background-size: cover;
          position: relative; 
          ">
          
          <div style="
            background-color: rgba(0, 0, 0, 0.8);
            position: absolute; 
            left: 0; 
            bottom: 0; 
            color: white; 
            width: 100%; 
            padding: 3em; 
            
          ">
        
          <div style="
            font-weigth: bold; 
            font-size: 1.5em; 
            width: 100%; 
            height: 3em; 
            display: inline-block; 
            padding: auto; ">
            {{.label}}</div>           
         </div>
        </div>
      </a>
    </div>
  {{/each}}
