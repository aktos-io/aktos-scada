#home-page(data-role='page', data-theme='a')
  | {{>nav-bar {active_button: '#/'}}}
  
  .container
    .row
      .col-sm-12
        img(
          src="img/aktos-logo-2.3.png"
          style="width: 100%; margin: 0; margin-top: -10px;"
        )
    .row
      .col-sm-offset-1.col-sm-4.home-col-padding
        | {{#with page.home.aboutUs}}
        h2 {{ .header }}
        | {{{ marked( .bodyShort ) }}}
        | {{/with}}
      .col-sm-offset-1.col-sm-4.col-sm-offset-1.home-col-padding
        h2 Etkinlikler
        | {{#each page.home.news }}
        h3 {{ .header }}
        | {{{ marked( .bodyShort ) }}}
        | {{/each}}
        
  | {{>connection-status {}}}
