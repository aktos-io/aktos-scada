        {{>status-led {pin_name: 'test-pin'} }}
.panel.panel-primary
  .panel-heading
    h3.panel-title Sliders
  .panel-body
    .row
      .col-md-12.
        {{>slider {pin_name:"slider-2", val: 45} }}

    .row
      .col-md-6.
        {{>slider {pin_name:"slider-1", val: 25} }}
        
      .col-md-6.
        {{>analog-display {pin_name: 'slider-1'} }}
        
    .row
      .col-md-3.
        {{>b-progress-bar {pin_name: 'slider-1', val: 55} }}

.panel.panel-primary
  .panel-heading
    h3.panel-title Grafikler
  .panel-body
    .row
      h3 Stacked progress 
      div. 
        {{>slider {pin_name:"slider-1", val: 25} }}
        {{>slider {pin_name:"slider-2", val: 25} }}
        {{>slider {pin_name:"slider-3", val: 25} }}
        {{>slider {pin_name:"slider-4", val: 25} }}
        {{>slider {pin_name:"slider-5", val: 25} }}

        {{>b-stacked-progress 
          {pin_names: [ 
              ['slider-1', 'red'], 
              ['slider-2', ''], 
              ['slider-3', 'green'],
              ['slider-4', 'blue'],
              ['slider-5', 'orange']
            ]
          }
        }}

.panel.panel-primary
  .panel-heading
    h3.panel-title Sensörler
  .panel-body
    .row. 
      {{>thermometer {pin_name: 'slider-1'} }}
      {{>thermometer {pin_name: 'slider-2'} }}
      {{>thermometer {pin_name: 'slider-3'} }}

.panel.panel-primary
  .panel-heading
    h3.panel-title Kullanıcı girişleri
  .panel-body
    .row
      .col-md-6
        h2 Textbox
        div.
          {{>textbox {pin_name: 'test-pin', val: 'test value'} }}


div(data-role="collapsible")
  h3  Delphi simulation 
  fieldset(data-role='controlgroup', data-type='horizontal')
    | {{>switch-button {pin_name: 'forward-limit', label: 'F-limit'} }}
    | {{>switch-button {pin_name: 'backwards-limit', label: 'B-limit'} }}
  fieldset(data-role='controlgroup', data-type='horizontal')
    | {{>push-button {pin_name: 'move-forward', label: 'Forward'} }}
    | {{>push-button {pin_name: 'move-backwards', label: 'Backwards'} }}
    | {{>push-button {pin_name: 'forward-limit', label: 'F-limit'} }}
    | {{>push-button {pin_name: 'backwards-limit', label: 'B-limit'} }}
  fieldset(data-role='controlgroup', data-type='horizontal')
    | {{>status-led {pin_name: 'piston.enab'} }}
    | {{>status-led {pin_name: 'piston.dir'} }}

div(data-role="collapsible")
  h3  Test looping 
  | {{>switch-list {my_list: ["hello", "world"], connected: true} }}

div(data-role="collapsible")            
  h3 Graph
  .ui-grid-a(style='height: 300px')
    .ui-block-a(style='height: 100%')
      | {{>line-graph {pin_name: 'slider-2'} }}
    .ui-block-b
      | {{>slider {pin_name:"slider-2", val: 25} }}
      
div(data-role="collapsible")            
  h3 Slider 
  .div.
    {{>analog-display {pin_name: 'slider-1'} }}
    
    {{>slider {pin_name:"slider-1", val: 45} }}
    {{>slider {pin_name:"slider-1", val: 45} }}
    {{>slider {pin_name:"slider-1", val: 45} }}

div(data-role="collapsible")            
  h3  Analog display 
  fieldset(data-role='controlgroup', data-type='horizontal')
    | {{>analog-display {pin_name: 'analog-1'} }}
    | {{>analog-display {pin_name: 'analog-2'} }}
    | {{>analog-display {pin_name: 'slider-2'} }}
